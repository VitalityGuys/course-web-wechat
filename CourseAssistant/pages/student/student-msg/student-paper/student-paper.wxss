/* pages/student/student-msg/student-paper/student-paper.wxss */

/* 试卷时间等描述 */
.desc {
  background: #fff;
  text-align: right;
  padding: 0 35rpx 15rpx 10rpx;
}




/* 提交按钮 */
.submit {
  width: 100%;
}

.submit button {
  width: 98% !important;
  margin: 3% 1% 1% 1% !important;
}


/* 题目 */
.question {
  width: 100%;
  background: #fff;
  padding: 20rpx 40rpx 0 40rpx;

  display: flex;
  flex-direction: column;

}

/* 题目下面的分割线 */
.question .line {
  margin: 0 auto;
  margin-top: 20rpx;
  width: 100%;
  height: 1px;
  background: #f4f4f4;
}



/* 题干 */
.question .main {
  margin: 0 0 10rpx 0;
}

/* 问题的选项 */
.question .opt {
  margin: 10rpx 0;
}



/* 答案 */
.question .answer {
  margin: 10rpx 0;
}


/* 选择题 */
.choices {
  margin: 10rpx 0;
}

/* 选答案的选择 */
.choices .select-opt {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
}


/* 判断题 */
.judges {
  margin: 10rpx 0;
}

.judges .select-opt {
  display: flex;
}


/* 填空题 */
.fills {
  margin: 10rpx 0;
}

.fills .input-answer {
  padding: 10rpx 0;
}

.input-answer input {
  /* background: pink; */
  height: 50rpx;
  margin: 10rpx 0;
  border-bottom: solid 1px gray;
  padding: 5rpx;
}

.input-answer .input-line {
  display: flex;
  align-items: center;
}