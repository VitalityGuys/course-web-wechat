<!--pages/student/student-me/student-score/student-score.wxml-->
<view class="root">

  <!-- 选择学期 -->
  <view class="cu-form-group margin-top pick-s">
    <view class="title">选择学期</view>
    <picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
      <view class="picker">
        {{index?picker[index]:'请选择学期'}}
      </view>
    </picker>
    <text class="btn">检索</text>
  </view>

  <!-- 成绩表 -->
  <view class="subjects">

    <view class="subject">
      <text class="name">数据可视化</text>
      <text class="score text-green">95.00</text>
      <view class="line"></view>
    </view>

    <view class="subject">
      <text class="name">Java高级应用</text>
      <text class="score text-green">85.00</text>
      <view class="line"></view>
    </view>

  </view>

</view>