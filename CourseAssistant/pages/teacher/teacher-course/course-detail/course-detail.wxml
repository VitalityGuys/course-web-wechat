<!--pages/teacher-course/course-detail/course-detail.wxml-->

<view class="root">

  <!-- 导航栏 -->
  <scroll-view scroll-x class="bg-white nav text-center">
    <view class="cu-item {{index==TabCur?'text-blue cur':''}}" wx:for="{{tab.length}}" wx:key="key" bindtap="tabSelect"
      data-id="{{index}}">
      {{tab[index]}}
    </view>
  </scroll-view>

  <!-- 章节 -->
  <view wx:if="{{TabCur==0}}">
    <view class="cu-list menu sm-border card-menu margin-top">
      <block wx:for="{{chapters}}" wx:key="key" wx:for-item="item">
        <view class="cu-item arrow" bindtap="jumpToChapter" data-chapterid="{{item.chapterid}}">
          <view class="content">
            <text class="cuIcon-btn text-blue"></text>
            <text class="text-grey text-center">{{item.chaptername}}</text>
          </view>
        </view>
      </block>
    </view>
  </view>


  <!-- 试卷 -->
  <view wx:if="{{TabCur==1}}">
    <view class="cu-list menu sm-border card-menu margin-top">

      <!-- <block wx:for="{{papers}}" wx:key="key" wx:for-item="item">
        <view class="cu-item arrow" bindtap="jumpToPaper" data-paperid="{{item.paperid}}">
          <view class="content">
            <text class="cuIcon-formfill text-green"></text>
            <text class="text-grey text-center">{{item.papername}}</text>
          </view>
        </view>
      </block> -->

      <block wx:for="{{papers}}" wx:key="key" wx:for-item="item">
        <view class="cu-item arrow paper" bindtap="jumpToPaper" data-paperid="{{item.paperid}}">
          <!-- <text class="icon"></text> -->
          <image class="icon" src="../../../../images/icon/paper.png"></image>
          <view class="content text">
            <text class="text-grey text-left text-lg">{{item.papername}}</text>

            <view class="desc">
              <text class="text-grey text-left text-sm"> 09-19 14:00 ~ 09-19 15:00 </text>
              <text class="text-gray text-sm"> 已发布 </text>
            </view>

          </view>
        </view>
      </block>

    </view>
  </view>

  <!-- 资料 -->
  <view wx:if="{{TabCur==2}}">
    <view class="cu-list menu sm-border card-menu margin-top">

      <image wx:if="{{imagePath}}" src="{{imagePath}}"></image>
      <video wx:if="{{videoPath}}" src="{{videoPath}}"></video>
      <block wx:for="{{datas}}" wx:key="key" wx:for-item="item">
        <view class="cu-item" bindtap="downloadData" data-datalink="{{item.datalink}}">
          <view class="content">
            <text class="cuIcon-pulldown text-green"></text>
            <text class="text-grey">{{item.dataname}}</text>
          </view>
          <view class="action">
            <text class="cuIcon-down lg text-grey">下载</text>
          </view>
        </view>
      </block>
    </view>
  </view>

  <!-- 话题 -->
  <view wx:if="{{TabCur==3}}">
    <view class="cu-list menu sm-border card-menu margin-top">
      <block wx:for="{{topics}}" wx:key="key" wx:for-item="item">
        <view class="cu-item arrow" bindtap="jumpToTopic" data-topicid="{{item.topicid}}">
          <view class="content">
            <text class="cuIcon-communityfill text-blue"></text>
            <text class="text-grey text-center">{{item.topictitle}}</text>
          </view>
        </view>
      </block>
    </view>
  </view>
</view>