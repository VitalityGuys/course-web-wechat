/* 题目 */
.question {
  width: 100%;
  background: #fff;
  padding: 20rpx 40rpx 0 40rpx;

  display: flex;
  flex-direction: column;

}

/* 题目下面的分割线 */
.question .line {
  margin: 0 auto;
  margin-top: 20rpx;
  width: 80%;
  height: 1px;
  background: #f4f4f4;
}



/* 题干 */
.question .main{
  margin: 0 0 10rpx 0;
}

/* 选项 */
.question .opts{
  margin: 10rpx 0;
}

/* 答案 */
.question .answer{
  margin: 10rpx 0;
}